{
  "Library": "libxrt-bacnet-ip-device-service.so",
  "Factory": "xrt_bacnet_ip_device_service_factory",
  "Name": "bacnet_ip",
  "QueueMax": 100000,
  "AutoRegister": false,
  "DiscoveryInterval": 0,
  "PublishRegisteredDevices": true,
  "PublishAttributes": true,
  "PublishServerId": true,
  "ProfileDir": "${XRT_STATE_DIR}/profiles",
  "StateDir": "${XRT_STATE_DIR}",
  "Group":"${SPARKPLUG_GROUP}",
  "Scheduler": "5-sched",
  "Logger": "2-logger",
  "ThreadPool": "3-pool",
  "SchedulesThreadPool": "4-devpool",
  "Bus": "6-bus",
  "DeviceDownTimeout": 60,
  "AllowedFails": 5,
  "Driver": {
    "NetworkInterface":"${BACNET_INTERFACE}",
    "DeviceObject": {
      "InstanceID": 0
    },
    "Port": 47808,
    "APDUTimeout": 3000,
    "APDURetries": 3,
    "MultiBatchSize": 20,
    "MultiRead": true,
    "MultiWrite": true,
    "CancelStaleCOV": true,
    "DiscoverMode": "All",
    "BBMDAddress": "${BACNET_IP_SIM_ADDRESS}",
    "BBMDPort": 47808
  }
}
